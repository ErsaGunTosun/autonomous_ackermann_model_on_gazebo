<?xml version="1.0" ?>
<robot name="robot" xmlns:xacro="http://ros.org/wiki/xacro">

  <!-- base_link -->
  <link name="base_footprint"/>

  <link name="base_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
         <box size="1.00571 0.5 0.284363"/>
      </geometry>
      <material name="blue">
        <color rgba="0.5 0.5 1.0 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
         <box size="1.00571 0.5 0.284363"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="20.14395"/>
      <inertia ixx="0.975" ixy="0" ixz="0"
         iyy="1.5"   iyz="0"
         izz="1.875"/>
    </inertial>
  </link>

  <joint name="base_joint" type="fixed">
    <origin xyz="0.0 0.0 0.1713" rpy="0.0 0.0 0.0"/>
    <parent link="base_footprint"/>
    <child link="base_link"/>
  </joint>

  <!-- Steering links -->
  <link name="front_left_wheel_steering_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
         <cylinder length="0.05" radius="0.015"/>
      </geometry>
      <material name="white">
        <color rgba="1 1 1 1"/>
      </material>
    </visual>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.5"/>
      <inertia ixx="7.2593E-07" ixy="4.1844E-21" ixz="-6.4509E-22" iyy="4.2983E-07" iyz="1.0174E-21" izz="7.4729E-07"/>
    </inertial>
  </link>

  <link name="front_right_wheel_steering_link">
    <visual>
      <geometry>
         <cylinder length="0.05" radius="0.015"/>
      </geometry>
      <material name="white">
        <color rgba="1 1 1 1"/>
      </material>
    </visual>
    <inertial>
      <mass value="0.5"/>
      <inertia ixx="7.2593E-07" ixy="4.1844E-21" ixz="-6.4509E-22" iyy="4.2983E-07" iyz="1.0174E-21" izz="7.4729E-07"/>
    </inertial>
  </link>

  <!-- Wheels -->
  <link name="front_left_wheel">
    <visual>
      <geometry>
         <cylinder radius="0.15" length="0.075"/>
      </geometry>
      <material name="black">
        <color rgba="0.2 0.2 0.2 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
         <cylinder radius="0.15" length="0.075"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="2"/>
      <inertia ixx="0.0010103" ixy="0" ixz="-2.5358E-36" iyy="0.0019302" iyz="2.351E-36" izz="0.0010103"/>
    </inertial>
  </link>

  <link name="front_right_wheel">
    <visual>
      <geometry>
         <cylinder radius="0.15" length="0.075"/>
      </geometry>
      <material name="black">
        <color rgba="0.2 0.2 0.2 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
         <cylinder radius="0.15" length="0.075"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="2"/>
      <inertia ixx="0.0010103" ixy="0" ixz="-2.5358E-36" iyy="0.0019302" iyz="2.351E-36" izz="0.0010103"/>
    </inertial>
  </link>

    <joint name="front_left_wheel_steering_joint" type="revolute">
    <parent link="base_link"/>
    <child link="front_left_wheel_steering_link"/>
      <origin xyz="0.475 0.25 0.01" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-0.43" upper="0.43" effort="100" velocity="1.0"/>  
  </joint>

  <joint name="front_right_wheel_steering_joint" type="revolute">
    <parent link="base_link"/>
    <child link="front_right_wheel_steering_link"/>
    <origin xyz="0.475 -0.25 0.01" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-0.43" upper="0.43" effort="100" velocity="1.0"/>  
  </joint>

  <joint name="front_left_wheel_joint" type="continuous">
    <parent link="front_left_wheel_steering_link"/>
    <child link="front_left_wheel"/>
    <origin xyz="0.0 0.075 -0.035" rpy="-1.5707 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <joint name="front_right_wheel_joint" type="continuous">
    <parent link="front_right_wheel_steering_link"/>
    <child link="front_right_wheel"/>
    <origin xyz="0.0 -0.075 -0.035" rpy="-1.5707 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <link name="rear_left_wheel">
    <visual>
      <geometry>
         <cylinder radius="0.15" length="0.075"/>
      </geometry>
      <material name="black">
        <color rgba="0.2 0.2 0.2 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
         <cylinder radius="0.15" length="0.075"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="2"/>
      <inertia ixx="0.0010103" ixy="0" ixz="-2.5358E-36" iyy="0.0019302" iyz="2.351E-36" izz="0.0010103"/>
    </inertial>
  </link>

  <link name="rear_right_wheel">
    <visual>
      <geometry>
         <cylinder radius="0.15" length="0.075"/>
      </geometry>
      <material name="black">
        <color rgba="0.2 0.2 0.2 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
         <cylinder radius="0.15" length="0.075"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="2"/>
      <inertia ixx="0.0010103" ixy="0" ixz="-2.5358E-36" iyy="0.0019302" iyz="2.351E-36" izz="0.0010103"/>
    </inertial>
  </link>

    <joint name="rear_left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="rear_left_wheel"/>
        <origin xyz="-0.478569 0.3125145 -0.0175" rpy="-1.5707 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

  <joint name="rear_right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="rear_right_wheel"/>
    <origin xyz="-0.478569 -0.3125145 -0.0175" rpy="-1.5707 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <!-- Sensors -->
  <link name="lidar_link">
        <inertial>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <mass value="0.05"/>
            <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
        </inertial>
        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                 <cylinder radius="0.075" length="0.03"/>
            </geometry>
            <material name="lidar_blue">
                 <color rgba="0.0 0.0 1.0 1"/>
            </material>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.075" length="0.03"/> 
            </geometry>
        </collision>
    </link>

    <link name="lidar_mount_link">
        <inertial>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <mass value="0.1"/>
            <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
        </inertial>
        <visual>
            <origin xyz="0.125 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.25 0.03 0.03"/>
            </geometry>
            <material name="mount_gray">
                <color rgba="0.4 0.4 0.4 1"/>
            </material>
        </visual>
        <collision>
            <origin xyz="0.125 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.25 0.03 0.03"/>
            </geometry>
        </collision>
    </link>

    <joint name="lidar_mount_joint" type="fixed">
        <origin xyz="0.5 0.0 -0.12" rpy="0.0 0.0 0.0" />
        <parent link="base_link" />
        <child link="lidar_mount_link" />
    </joint>

    <joint name="lidar_link_joint" type="fixed">
        <origin xyz="0.25 0.0 -0.03" rpy="0.0 0.0 0.0" />
        <parent link="lidar_mount_link" />
        <child link="lidar_link" />
    </joint>

    <link name="camera_link">
        <inertial>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <mass value="0.05"/>
            <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
        </inertial>
        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.05" length="0.3"/> 
            </geometry>
            <material name="camera">
                <color rgba="0.0 0.0 0.0 1"/>
            </material>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.03" length="0.04"/> 
            </geometry>
        </collision>
    </link>

    <joint name="camera_link_joint" type="fixed">
        <origin xyz="0.4 0.0 0.24" rpy="0.0 0.0 0.0" />
        <parent link="base_link" />
        <child link="camera_link" />
    </joint>

    <xacro:include filename="ackermann.gazebo.xacro" />

</robot>